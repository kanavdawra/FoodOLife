<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">


    <TextView
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:textSize="40sp"
        android:textColor="@color/colorText"
        android:text="@string/sign_in"
        android:gravity="center"
        android:textAlignment="center"
        app:layout_constraintVertical_bias=".1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/sign_in_email"
        android:layout_width="300dp"
        android:layout_height="60dp"
        app:met_primaryColor="@color/colorWhite"
        android:textColor="@color/colorText"
        app:met_baseColor="@color/colorWhite"
        android:hint="@string/username_email"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="Email"
        app:met_errorColor="@color/colorError"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".3"/>
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/sign_in_password"
        android:layout_width="300dp"
        android:layout_height="60dp"
        app:met_primaryColor="@color/colorWhite"
        android:textColor="@color/colorText"
        app:met_baseColor="@color/colorWhite"
        android:hint="@string/password"
        android:inputType="textPassword"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="Password"
        app:met_errorColor="@color/colorError"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".45"/>

    <TextView
        android:id="@+id/sign_in_submit"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:background="@drawable/black_button_un_selected"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:text="@string/sign_in"
        android:textAlignment="center"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".6" />


    <TextView
        android:id="@+id/sign_in_google"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/google_G"
        android:textColor="@color/colorWhite"
        android:textSize="30sp"
        android:textAlignment="center"
        android:gravity="center"
        android:background="@drawable/black_circle_80x80"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".77"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/do_not_have_account"
        android:textColor="@color/colorText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".9"
        app:layout_constraintHorizontal_bias=".4"/>


    <TextView
        android:id="@+id/sign_in_click_here"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="@string/click_here"
        android:textColor="@color/colorSecondary"
        android:gravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".897"
        app:layout_constraintHorizontal_bias=".77"/>




</androidx.constraintlayout.widget.ConstraintLayout>