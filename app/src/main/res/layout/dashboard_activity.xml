<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".MainActivity">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="400dp"
        android:layout_height="160dp"
        android:layout_gravity="center"
        app:cardCornerRadius="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        tools:layout_editor_absoluteX="6dp">

        <RelativeLayout
            android:layout_width="408dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryLight"
            android:shrinkColumns="0"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="133dp">


            <TextView
                android:id="@+id/eaten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="298dp"
                android:layout_marginLeft="298dp"
                android:layout_marginTop="85dp"
                android:layout_marginEnd="61dp"
                android:layout_marginRight="75dp"
                android:layout_marginBottom="35dp"
                android:background="@drawable/black_circle_40"
                android:gravity="center"
                android:text="0\nEATEN"
                android:textColor="@color/colorText"
                android:textSize="14sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/carbs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="51dp"
                android:layout_marginLeft="51dp"
                android:layout_marginTop="19dp"
                android:layout_marginEnd="291dp"
                android:layout_marginRight="291dp"
                android:layout_marginBottom="101dp"
                android:background="@drawable/black_circle_40"
                android:gravity="center"
                android:text="CARBS\n202 g left"
                android:textColor="@color/colorText"
                android:textSize="14sp"
                tools:ignore="HardcodedText,SmallSp" />

            <TextView
                android:id="@+id/burned"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="297dp"
                android:layout_marginLeft="297dp"
                android:layout_marginTop="19dp"
                android:layout_marginEnd="51dp"
                android:layout_marginRight="51dp"
                android:layout_marginBottom="102dp"
                android:background="@drawable/black_circle_40"
                android:gravity="center"
                android:text="0\nBURNED"
                android:textColor="@color/colorText"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/fat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="84dp"
                android:layout_marginLeft="61dp"
                android:layout_marginTop="85dp"
                android:layout_marginEnd="264dp"
                android:layout_marginRight="264dp"
                android:layout_marginBottom="35dp"
                android:background="@drawable/black_circle_40"
                android:gravity="center"
                android:text="10\nFAT left"
                android:textColor="@color/colorText"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/kcal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="154dp"
                android:layout_marginRight="154dp"
                android:layout_marginBottom="83dp"
                android:background="@drawable/black_circle_80x80"
                android:gravity="center"
                android:text="1916\nKCAL LEFT"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                app:layout_constraintVertical_bias=".5" />

            <TextView
                android:id="@+id/protin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="162dp"
                android:layout_marginRight="162dp"
                android:layout_marginBottom="18dp"
                android:background="@drawable/black_circle_40"
                android:gravity="center"
                android:text="PROTEIN\n81 g left"
                android:textColor="@color/colorText"
                android:textSize="16sp"
                tools:ignore="HardcodedText,SmallSp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/btn_breakfast"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginBottom="2dp"
        android:background="@color/colorPrimaryLight"
        android:drawableLeft="@drawable/bread_48"
        android:drawableRight="@drawable/add_48"
        android:text="@string/breakfast"
        android:textColor="@color/colorText"
        app:layout_constraintBottom_toTopOf="@+id/btn_lunch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_view" />


    <Button
        android:id="@+id/btn_lunch"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="2dp"
        android:background="@color/colorPrimaryLight"
        android:drawableLeft="@drawable/bento_48"
        android:drawableRight="@drawable/add_48"
        android:text="@string/lunch"
        android:textColor="@color/colorText"
        app:layout_constraintBottom_toTopOf="@+id/btn_dinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_breakfast" />

    <Button
        android:id="@+id/btn_dinner"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="2dp"
        android:background="@color/colorPrimaryLight"
        android:drawableLeft="@drawable/food_and_wine_48"
        android:drawableRight="@drawable/add_48"
        android:text="@string/dinner"
        android:textColor="@color/colorText"
        app:layout_constraintBottom_toTopOf="@+id/btn_snack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_lunch" />

    <Button
        android:id="@+id/btn_snack"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@color/colorPrimaryLight"
        android:drawableLeft="@drawable/doughnut_48"
        android:drawableRight="@drawable/add_48"
        android:text="@string/snack"
        android:textColor="@color/colorText"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_dinner" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1">

        <LinearLayout
            android:id="@+id/bottom_navigation_profile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:background="@drawable/view_top_right_border_black"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/bottom_navigation_profile_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="7.5dp"
                android:background="@drawable/profile_white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:gravity="center"
                android:text="@string/profile"
                android:textAlignment="center"
                android:textColor="@color/colorText"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_navigation_quiz"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:background="@drawable/view_top_right_border_black"
            android:orientation="vertical"

            >

            <ImageView
                android:id="@+id/bottom_navigation_quiz_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="7.5dp"
                android:background="@drawable/light_on_white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:gravity="center"
                android:text="@string/quiz"
                android:textAlignment="center"
                android:textColor="@color/colorText"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_navigation_dashboard"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:background="@drawable/view_top_right_border_black"
            android:orientation="vertical"

            >

            <ImageView
                android:id="@+id/bottom_navigation_dashboard_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="7.5dp"
                android:background="@drawable/pie_white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:gravity="center"
                android:text="@string/dashboard"
                android:textAlignment="center"
                android:textColor="@color/colorText"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_navigation_leaderboard"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:background="@drawable/view_top_right_border_black"
            android:orientation="vertical"

            >

            <ImageView
                android:id="@+id/bottom_navigation_leaderboard_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="7.5dp"
                android:background="@drawable/leaderboard_white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:gravity="center"
                android:text="@string/leaderboard"
                android:textAlignment="center"
                android:textColor="@color/colorText"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_navigation_stats"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:background="@drawable/view_top_right_border_black"
            android:orientation="vertical"

            >

            <ImageView
                android:id="@+id/bottom_navigation_stats_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="7.5dp"
                android:background="@drawable/graph_white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:gravity="center"
                android:text="@string/statistics"
                android:textAlignment="center"
                android:textColor="@color/colorText"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>